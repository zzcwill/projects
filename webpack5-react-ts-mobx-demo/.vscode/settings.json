{
  // eslint配置
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.organizeImport": true,
    "source.fixAll": true, // 对所有文件，保存时自动格式化
    "source.fixAll.eslint": true, // 更细. 在文件保存时，禁用eslint规则生效。此配置会影响 eslint.format.enable
    "source.fixAll.tslint": false, // 更细. 在文件保存时，禁用tslint规则生效。 此配置会影响 typescript.validate.enable
    "source.fixAll.stylelint": true //开启stylelint自动修复
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "eslint.alwaysShowStatus": true,
  // 关闭编辑器内置样式检查（避免与stylelint冲突）
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // 配置stylelint检查的文件类型范围
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss",
    "sass",
    "vue"
  ],
}
